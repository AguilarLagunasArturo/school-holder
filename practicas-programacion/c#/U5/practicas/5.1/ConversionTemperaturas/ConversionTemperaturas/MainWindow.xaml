<Window x:Class="ConversionTemperaturas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConversionTemperaturas"
        mc:Ignorable="d"
        Title="Temperatura" Height="188" Width="414" ShowInTaskbar="False" ResizeMode="NoResize" Icon="itver.png" Background="#FF191919">
    <Grid Margin="0,0,20,0">
        <Label Content="Grados Centigrados" HorizontalAlignment="Left" Margin="45,20,0,0" VerticalAlignment="Top" Foreground="#FFFDFDFD" FontSize="16"/>
        <Label Content="Grados Fahrenheit" HorizontalAlignment="Left" Margin="45,64,0,0" VerticalAlignment="Top" Foreground="#FFFDFDFD" FontSize="16"/>
        <TextBox x:Name="textCentigrados" HorizontalAlignment="Left" Height="31" Margin="211,20,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <TextBox x:Name="textFahrenheit" HorizontalAlignment="Left" Height="31" Margin="211,64,0,0" TextWrapping="Wrap" Text="32" VerticalAlignment="Top" Width="120" FontSize="16" IsEnabled="False"/>
        <Button x:Name="buttonConvertir" Content="Convertir" HorizontalAlignment="Left" Margin="45,111,0,0" VerticalAlignment="Top" Width="286" Click="Button_Click" FontSize="16"/>
    </Grid>
</Window>
